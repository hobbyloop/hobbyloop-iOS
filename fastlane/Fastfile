# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :generate do

    

    increment_build_number(
      build_number: latest_testflight_build_number() + 1,
      xcodeproj: "./App/Hobbyloop.xcodeproj"
    )
    
    build_app(
      workspace: "#{ENV['APP_NAME']}.xcworkspace",
      scheme: "#{ENV['SCHEME']}",
      export_method: "app-store",
      export_options: {
		  method: "app-store", 
	    provisioningProfiles: {
		  "com.sideproj.Hobbyloop" => "Hobbyloop.Release",
      "com.sideproj.Hobbyloop" => "Hobbyloop.Debug"
		  }
	  }
    )

    upload_to_testflight(skip_waiting_for_build_processing: true)

	discord_notifier(
      webhook_url: "#{ENV['WEBHOOK_URL']}",
      title: "ğŸš€ #{ENV['APP_NAME']} iOS ë°°í¬ ì„±ê³µ",
      description: "#{ENV['APP_NAME']} iOSë¥¼ ì•±ìŠ¤í† ì–´ì— ì„±ê³µì ìœ¼ë¡œ ë°°í¬í•˜ì˜€ìŠµë‹ˆë‹¤ !"
    )
  end
end
