default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :generate do |options|

    app_store_connect_api_key(
      key_id: ENV['FASTLANE_API_KEY_ID'],
      issuer_id: ENV['FASTLANE_API_KEY_ISSUER_ID'],
      key_content: "-----BEGIN PRIVATE KEY-----\nMIGTAgEAMBMGByqGSM49AgEGCCqGSM49AwEHBHkwdwIBAQQg2eS8DXhKskhLGAIRP6HCBZToD/OAZDv5Ixn0/q9JDHmgCgYIKoZIzj0DAQehRANCAARoKTwA50Yiz6a4qZIOnnpkBj9MuqzHO7Ak0xbloFaY7AjLvtHJR1CfKUPGW08d7p5I6LxMyfslHXc93Aqhtq5E\n-----END PRIVATE KEY-----",
      is_key_content_base64: false,
      in_house: false
    )

    increment_build_number(
      build_number: latest_testflight_build_number() + 1,
      xcodeproj: "./App/Hobbyloop.xcodeproj"
    )
    
    build_app(
      workspace: "#{ENV['APP_NAME']}.xcworkspace",
      scheme: "#{ENV['SCHEME']}",
      export_method: "app-store",
      export_options: {
		  method: "app-store", 
	    provisioningProfiles: {
        "com.app.hobbyloop" => "Hobbyloop.Release",
        "com.app.hobbyloop" => "Hobbyloop.Debug"
		  }
	  }
    )

    upload_to_testflight(
      app_identifier: "#{ENV['BUNDLE_IDENTIFIER']}",
      apple_id: "#{ENV['ITC_TEAM_ID']}",
      skip_waiting_for_build_processing: true
      )
  
	  discord_notifier(
      webhook_url: "#{ENV['WEBHOOK_URL']}",
      title: "ğŸš€ #{ENV['APP_NAME']} iOS ë°°í¬ ì„±ê³µ",
      description: "#{ENV['APP_NAME']} iOSë¥¼ ì•±ìŠ¤í† ì–´ì— ì„±ê³µì ìœ¼ë¡œ ë°°í¬í•˜ì˜€ìŠµë‹ˆë‹¤ !"
    )
  end

  error do |lane, exception, options|
    discord_notifier(
      webhook_url: ENV['WEBHOOK_URL'],
      title: "ğŸ‘¾ #{ENV['APP_NAME']} iOS ë°°í¬ ìë™í™” ì‹¤íŒ¨..",
      thumbnail_url: "#{ENV['WEBHOOK_URL']}",
      success: false,
